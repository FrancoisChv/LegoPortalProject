<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="25sp"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:fontFamily="sans-serif-smallcaps"
            android:text="LEGO EV3 mindstorm\nGESTION ET PARAMETRES"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Modifier adresse MAC du portail"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/mac_portal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="02:00:00:00:00"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:inputType="text"/>
        <Button
            android:id="@+id/modif_mac_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Valider modification"
            android:background="#000000"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Liste des télécommandes du portail"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Télécommande 1"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/mac1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="#7F7F7F"
            android:textAlignment="center"
            android:fontFamily="sans-serif-smallcaps"
            android:text="0000000000"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/delete_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#BB0B0B"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Supprimer"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Télécommande 2"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/mac2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="13dp"
            android:textColor="#7F7F7F"
            android:textAlignment="center"
            android:fontFamily="sans-serif-smallcaps"
            android:text="0000000000"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/delete_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#BB0B0B"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Supprimer"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Télécommande 3"
            />

        <TextView
            android:id="@+id/mac3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="#7F7F7F"
            android:textAlignment="center"
            android:fontFamily="sans-serif-smallcaps"
            android:text="0000000000"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/delete_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#BB0B0B"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Supprimer"
            android:layout_marginLeft="18dp"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-smallcaps"
            android:text="\nSUPPRESSION DU COMPTE\n"
            />

        <Button
            android:id="@+id/delete_user_btn"
            android:layout_width="800dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Supprimier définitivement le compte"
            android:background="#BB0B0B"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>